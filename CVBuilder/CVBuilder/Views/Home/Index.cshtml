                                <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                <img src="~/img/demo-screen-1.jpg" class="img-fluid" alt="">
                            </div>
                            <div class="button">
                                <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>*@
            <div class="col my-auto">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-6">
                            <div class="feature-item">
                                <i class="far fa-smile"></i>
                                <h3>Fácil de usar</h3>
                                <p class="text-muted">La plataforma fue echa para que sea lo más amena posible para el usuario</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-item">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <h3>Guardado en la nube</h3>
                                <p class="text-muted">Crea una cuenta y podrás mantener siempre los cambios de tu curriculum para cuando lo necesites</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="feature-item">
                                <i class="fas fa-palette"></i>
                                <h3>Temas</h3>
                                <p class="text-muted">Puedes elegir entre distintas plantillas al momento de crear tu cv</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-item">
                                <i class="fas fa-puzzle-piece"></i>
                                <h3>Secciones propias</h3>
                                <p class="text-muted">Si las secciones del CV no son suficientes para ti puedes crear todas las que quieras</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="feature-item">
                                <i class="fas fa-download"></i>
                                <h3>Descarga</h3>
                                <p class="text-muted">Una vez terminado podrás descargar el CV como PDF listo para enviarlo</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-item">
                                <i class="icon-present text-primary"></i>
                                <h3>Gratuito</h3>
                                <p class="text-muted">Puedes crear, editar y descargar tu CV las veces que quieras sin ningún costo</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

