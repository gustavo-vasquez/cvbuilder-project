@model CVBuilder.ViewModels.Curriculum.LanguagesViewModel

@using (Ajax.BeginForm("Languages", "Curriculum", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "onSectionFormSuccessful", OnFailure = "onErrorSubmit" }, new { id = Model.FormId }))
{
    <hr />
    <fieldset>
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.LanguageID)
        @Html.HiddenFor(m => m.Type)
        <div class="row">
            <div class="col-10">
                <div class="custom-control custom-switch pb-4">
                    @Html.CheckBoxFor(m => m.IsVisible, new { @class = "custom-control-input" })
                    <label class="custom-control-label" for="IsVisible">Bloque visible</label>
                </div>
            </div>
            <div class="col-2 text-right">
                <button type="button" class="btn btn-sm btn-outline-secondary border-0 close-block" title="Cerrar">
                    <i class="fas fa-times h4 mb-0"></i>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Idioma</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Ej: Español" })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Nivel</label>
                    @Html.DropDownListFor(m => m.Level, Model.Levels, new { @class = "custom-select" })
                    @Html.ValidationMessageFor(m => m.Level, null, new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </fieldset>

    <div class="row">
        <div class="col">
            <div class="btn-group btn-block">
                <button type="submit" class="btn btn-sm btn-outline-success"><i class="fas fa-check"></i> Hecho</button>&nbsp;
                <button type="button" class="btn btn-sm btn-outline-danger remove-form-block"><i class="far fa-trash-alt"></i> Eliminar</button>
            </div>
        </div>
    </div>
}
